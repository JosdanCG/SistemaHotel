<%- include("templates/bootstrap") %>


    <div class="login-card-container">
        <link rel="stylesheet" href="/style.css">
        <div class="login-card">
            <div class="login-card-logo">
                <img src="/logo_hover_icon.svg" alt="La Casa De Mi Viejo">
            </div>

            <div class="login-card-header">
                <h1>Log In</h1>
                <div>Ingrese sus datos para ingresar a la plataforma</div>
            </div>
            <form class="login-card-form" action="/valider" method="get">
                <div class="form-item">
                    <span class="form-item-icon material-symbols-outlined">person</span>
                    <input type="text" name="co" placeholder="Ingresar codigo" required autofocus>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-outlined">lock</span>
                    <input type="password" name="pa" placeholder="Ingresar contraseña" required autofocus>
                </div>
                <div class="form-item-other">
                    <div class="checkbox">
                        <input type="checkbox" id="checkbox">
                        <label for="checkbox">Recordar contraseña</label>
                    </div>
                    <a href="Password/correoConfirmacion">Olvide mi contraseña</a>
                </div>
                <button id="in" onclick="login()" type="submit"><a href="index">INGRESAR</a></button>
            </form>
        </div>
        <div class="login-card-social">
            <div>Ir Pagina Principal</div>
            <div class="login-card-social-btn">
                <a href="https://lacasademiviejo.com/">
                    <span class="material-symbols-outlined">double_arrow</span>
                </a>
            </div>
        </div>
    </div>